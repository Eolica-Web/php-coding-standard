{
    "name": "eolica/coding-standard",
    "description": "PHP Coding Standard rules we use at Eolica Digital",
    "type": "library",
    "keywords": ["static analysis", "code standard"],
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "David Llobell",
            "email": "dllobellmoya@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Eolica\\CodingStandard\\": "src/"
        }
    },
    "require": {
        "symplify/easy-coding-standard": "^12.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.62",
        "symplify/coding-standard": "^12.2"
    },
    "scripts": {
        "lint": "vendor/bin/ecs check -c ./ecs.php",
        "lint-fix": "vendor/bin/ecs check --fix -c ./ecs.php"
    }
}
